{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "railway_color_scale",
      "value": {
        "domain": [
          "Kelana Jaya Line",
          "Ampang Line",
          "Putrajaya Line",
          "Kajang Line",
          "KTM",
          "KL Monorail"
        ],
        "range": [
          "#1f78b4",
          "#33a02c",
          "#6a3d9a",
          "#00bfc4",
          "#b2df8a",
          "#636363"
        ]
      }
    }
  ],
  "vconcat": [
    {
      "title": "Yearly Ridership (Brush to Select Year Range)",
      "width": 1500,
      "height": 100,
      "data": {"url": "data/ridership_filtered.csv"},
      "mark": "line",
      "params": [
        {
          "name": "time_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "axis": {"title": "Year", "format": "%Y"}
        },
        "y": {
          "aggregate": "sum",
          "field": "ridership",
          "axis": {"title": "Total Ridership", "grid": false}
        },
        "color": {
          "field": "route", 
          "type": "nominal",
          "scale": {
            "domain": {"expr": "railway_color_scale.domain"}, 
            "range": [
              "#1f78b4",
              "#33a02c",
              "#6a3d9a",
              "#00bfc4",
              "#b2df8a",
              "#636363"
            ]
          }
        }
      }
    },
    {
      "title": "",
      "width": 1500,
      "height": 100,
      "data": {"url": "data/ridership_filtered.csv"},
      "mark": "area",
      "encoding": {
        "x": {
          "field": "date", 
          "type": "temporal", 
          "timeUnit": "yearmonth",
          "title": "Month",
          "scale": {"domain": {"param": "time_brush"}},
          "axis": {"grid": false}
        },
        "y": {
          "aggregate": "sum", 
          "field": "ridership", 
          "title": "Total Ridership"
        },
        "color": {
          "field": "route", 
          "type": "nominal",
          "scale": {
            "domain": {"expr": "railway_color_scale.domain"}, 
            "range": [
              "#1f78b4",
              "#33a02c",
              "#6a3d9a",
              "#00bfc4",
              "#b2df8a",
              "#636363"
            ]
          }
        },
        "tooltip": [
          {"field": "route", "title": "Route"},
          {"aggregate": "sum", "field": "ridership", "title": "Ridership"}
        ]
      }
    }
  ],
  "config": {
    "title": {"font": "sans-serif", "fontSize": 14},
    "legend": {"titleFontSize": 11, "labelFontSize": 10}
  }
}
