{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"type": "fit-x", "contains": "padding"},
  "params": [
    {
      "name": "railway_color_scale",
      "value": {
        "domain": [
          "Kelana Jaya Line",
          "Ampang Line",
          "Putrajaya Line",
          "Kajang Line",
          "KTM",
          "KL Monorail"
        ],
        "range": [
          "#1f78b4",
          "#33a02c",
          "#6a3d9a",
          "#00bfc4",
          "#b2df8a",
          "#636363"
        ]
      }
    }
  ],
  "vconcat": [
    {
      "title": "Yearly Ridership by Route",
      "width": "container",
      "height": 200,
      "data": {"url": "data/ridership_filtered.csv"},
      "layer": [
        {
          "mark": {
            "type": "text",
            "align": "center",
            "font": "Arial",
            "fontSize": 12,
            "fontWeight": "normal",
            "fill": "#555"
          },
          "encoding": {
            "y": {"value": -20},
            "text": {"value": "ðŸ’¡ Drag horizontally to brush and explore routes below"}
          }
        },
        {
          "mark": "line",
          "params": [
            {
              "name": "time_brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "timeUnit": "yearmonth",
              "axis": {
                "title": "Year", 
                "format": "%Y",
                "labelFontSize": 12,
                "grid": true
              }
            },
            "y": {
              "aggregate": "sum",
              "field": "ridership",
              "axis": {
                "title": "Total Ridership", 
                "grid": false,
                "labelFontSize": 12
              }
            },
            "color": {
              "field": "route", 
              "type": "nominal",
              "legend": {
                "title": "Routes",
                "orient": "right"
              },
              "scale": {
                "domain": {"expr": "railway_color_scale.domain"}, 
                "range": [
                  "#1f78b4",
                  "#33a02c",
                  "#6a3d9a",
                  "#00bfc4",
                  "#b2df8a",
                  "#636363"
                ]
              }
            }
          }
        }
      ]
    },
    {
      "title": "Ridership by Route",
      "width": "container",
      "height": 200,
      "data": {"url": "data/ridership_filtered.csv"},
      "transform": [
        {"filter": {"param": "time_brush"}},
        {
          "aggregate": [
            {"op": "sum", "field": "ridership", "as": "total_ridership"}
          ],
          "groupby": ["route"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "route", 
          "type": "nominal",
          "title": "Route",
          "axis": {
            "grid": false,
            "labelAngle": 0,
            "labelFontSize": 12
          },
          "sort": "-x",
          "scale": {"padding": 0.5}
        },
        "x": {
          "field": "total_ridership",
          "type": "quantitative",
          "title": "Total Ridership",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "color": {
          "field": "route", 
          "type": "nominal",
          "legend": {
            "title": "Routes",
            "orient": "right"
          },
          "scale": {
            "domain": {"expr": "railway_color_scale.domain"}, 
            "range": [
              "#1f78b4",
              "#33a02c",
              "#6a3d9a",
              "#00bfc4",
              "#b2df8a",
              "#636363"
            ]
          }
        },
        "tooltip": [
          {"field": "route", "title": "Route"},
          {"field": "total_ridership", "title": "Ridership", "format": ",d"}
        ]
      }
    }
  ],
  "config": {
    "title": {
      "font": "Times New Roman",
      "fontSize": 24,
      "fontWeight": "bold"
    },
    "legend": {
      "titleFontSize": 13.5, 
      "labelFontSize": 12.5
    },
    "concat": {"spacing": 50}
  }
}
