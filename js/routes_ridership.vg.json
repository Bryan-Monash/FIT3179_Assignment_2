{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {"type": "fit-x", "contains": "padding"},
  "params": [
    {
      "name": "railway_color_scale",
      "value": {
        "domain": [
          "Kelana Jaya Line",
          "Ampang Line",
          "Putrajaya Line",
          "Kajang Line",
          "KTM",
          "KL Monorail"
        ],
        "range": [
          "#1f78b4",
          "#33a02c",
          "#6a3d9a",
          "#00bfc4",
          "#b2df8a",
          "#636363"
        ]
      }
    }
  ],
  "vconcat": [
    {
      "title": "Yearly Ridership (Brush to Select Year Range)",
      "width": "container",
      "height": 100,
      "data": {"url": "data/ridership_filtered.csv"},
      "layer": [
        {
          "mark": "line",
          "params": [
            {
              "name": "time_brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "timeUnit": "yearmonth",
              "axis": {
                "title": "Year", 
                "format": "%Y",
                "labelFontSize": 12,
                "grid": true
              }
            },
            "y": {
              "aggregate": "sum",
              "field": "ridership",
              "axis": {
                "title": "Total Ridership", 
                "grid": false,
                "labelFontSize": 12
              }
            },
            "color": {
              "field": "route", 
              "type": "nominal",
              "legend": {
                "title": "Route",
                "orient": "right"
              },
              "scale": {
                "domain": {"expr": "railway_color_scale.domain"}, 
                "range": [
                  "#1f78b4",
                  "#33a02c",
                  "#6a3d9a",
                  "#00bfc4",
                  "#b2df8a",
                  "#636363"
                ]
              }
            }
          }
        }
      ]
    },
    {
      "title": "Ridership by Route",
      "width": "container",
      "height":200,
      "data": {"url": "data/ridership_filtered.csv"},
      "transform": [
        {"filter": {"param": "time_brush"}},
        {
          "aggregate": [
            {"op": "sum", "field": "ridership", "as": "total_ridership"}
          ],
          "groupby": ["route"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "route", 
          "type": "nominal",
          "title": "Route",
          "axis": {
            "grid": false,
            "labelAngle": 0,
            "labelFontSize": 12
          },
          "sort": "-x",
          "scale": {"padding": 0.5}
        },
        "x": {
          "field": "total_ridership",
          "type": "quantitative",
          "title": "Total Ridership",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "color": {
          "field": "route", 
          "type": "nominal",
          "legend": {
            "title": "Route",
            "orient": "right"
          },
          "scale": {
            "domain": {"expr": "railway_color_scale.domain"}, 
            "range": [
              "#1f78b4",
              "#33a02c",
              "#6a3d9a",
              "#00bfc4",
              "#b2df8a",
              "#636363"
            ]
          }
        },
        "tooltip": [
          {"field": "route", "title": "Route"},
          {"field": "total_ridership", "title": "Ridership"}
        ]
      }
    },
    {
      "title": "Fuel Price in Malaysia",
      "width": "container",
      "data": {"url": "data/fuelprice_filtered.csv"},
      "transform": [
        {"filter": {"param": "time_brush"}},
        {
          "fold": ["ron95", "ron97"],
          "as": ["fuel_type", "price"]
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "title": "Year",
          "axis":  {
            "labelExpr": "timeFormat(datum.value, '%B %Y')",
            "labelFontSize": 12,
            "grid": false
          }
        },
        "y": {
          "field": "price",
          "type": "quantitative",
          "title": "Fuel Price (MYR)",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "color": {
          "field": "fuel_type",
          "type": "nominal",
          "title": "Fuel Type",
          "scale": {
            "domain": ["ron95", "ron97"],
            "range": ["#ff7f0e", "#2ca02c"]
          },
          "legend": {
            "title": "Fuel Type",
            "orient": "right"
          }
        }
      }
    },  
    {
      "title": "Malaysia Temperature Heatmap",
      "width": "container",
      "data": {"url": "data/weather_filtered_temperature.csv"},
      "transform": [
        {
          "calculate": "toDate(datum.date)",
          "as": "date"
        },
        {"filter": {"param": "time_brush"}}
      ],
      "mark": "rect",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "title": "Month",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "y": {
          "field": "state",
          "type": "nominal",
          "title": "State",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "color": {
          "aggregate": "mean",
          "field": "temperature",
          "type": "quantitative",
          "scale": {"scheme": "yelloworangebrown"},
          "title": "Temperature (°C)",
          "legend": {
            "title": "Temperature (°C)",
            "orient": "right"
          }
        },
        "tooltip": [
          {"field": "state", "title": "State"},
          {
            "field": "date",
            "title": "Month",
            "type": "temporal",
            "timeUnit": "yearmonth",
            "format": "%B %Y"
          },
          {
            "aggregate": "mean",
            "field": "temperature",
            "title": "Average Temperature (°C)",
            "type": "quantitative",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "title": {
      "font": "Times New Roman",
      "fontSize": 24,
      "fontWeight": "bold"
    },
    "legend": {"titleFontSize": 16, "labelFontSize": 14},
    "concat": {"spacing": 100}
  }
}
