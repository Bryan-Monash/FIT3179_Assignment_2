{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "railway_color_scale",
      "value": {
        "domain": [
          "Kelana Jaya Line",
          "Ampang Line",
          "Putrajaya Line",
          "Kajang Line",
          "KTM",
          "KL Monorail"
        ],
        "range": [
          "#1f78b4",
          "#33a02c",
          "#6a3d9a",
          "#00bfc4",
          "#b2df8a",
          "#636363"
        ]
      }
    }
  ],
  "vconcat": [
    {
      "title": "Yearly Ridership (Brush to Select Year Range)",
      "width": "container",
      "height": 100,
      
      "data": {"url": "data/ridership_filtered.csv"},
      "layer": [
        {
          "mark": "line",
          "params": [
            {
              "name": "time_brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "timeUnit": "yearmonth",
              "axis": {
                "title": "Year", 
                "format": "%Y",
                "labelFontSize": 12
              }
            },
            "y": {
              "aggregate": "sum",
              "field": "ridership",
              "axis": {
                "title": "Total Ridership", 
                "grid": false,
                "labelFontSize": 12
              }
            },
            "color": {
              "field": "route", 
              "type": "nominal",
              "legend": {
                "title": "Route",
                "orient": "right"
              },
              "scale": {
                "domain": {"expr": "railway_color_scale.domain"}, 
                "range": [
                  "#1f78b4",
                  "#33a02c",
                  "#6a3d9a",
                  "#00bfc4",
                  "#b2df8a",
                  "#636363"
                ]
              }
            }
          }
        },
        {
          "transform": [
            {
              "timeUnit": "yearmonth",
              "field": "date",
              "as": "yearmonth"
            },
            {
              "aggregate": [
                {"op": "sum", "field": "ridership_int", "as": "total_ridership"}
              ],
              "groupby": ["yearmonth"]
            },
            {
              "window": [
                {"op": "min", "field": "total_ridership", "as": "min_ridership"}
              ]
            },
            {
              "filter": "datum.total_ridership == datum.min_ridership"
            },
            {
              "calculate": "'The least ridership is during April 2020'",
              "as": "annotation"
            }
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "dy": 40,
            "fontSize": 14,
            "color": "black"
          },
          "encoding": {
            "x": {"datum": 0},
            "y": {"datum": 0},
            "text": {"field": "annotation"}
          }
        }
      ]
    },
    {
      "title": "Ridership by Route",
      "width": "container",
      "data": {"url": "data/ridership_filtered.csv"},
      "transform": [
        {"filter": {"param": "time_brush"}},
        {
          "aggregate": [
            {"op": "sum", "field": "ridership", "as": "total_ridership"}
          ],
          "groupby": ["route"]
        }
      ],
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "route", 
          "type": "nominal",
          "title": "Route",
          "axis": {
            "grid": false,
            "labelAngle": 0,
            "labelFontSize": 12
          },
          "sort": "-y"
        },
        "y": {
          "field": "total_ridership",
          "type": "quantitative",
          "title": "Total Ridership",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "color": {
          "field": "route", 
          "type": "nominal",
          "legend": {
            "title": "Route",
            "orient": "right"
          },
          "scale": {
            "domain": {"expr": "railway_color_scale.domain"}, 
            "range": [
              "#1f78b4",
              "#33a02c",
              "#6a3d9a",
              "#00bfc4",
              "#b2df8a",
              "#636363"
            ]
          }
        },
        "tooltip": [
          {"field": "route", "title": "Route"},
          {"field": "total_ridership", "title": "Ridership"}
        ]
      }
    },
    {
      "title": "Selangor Temperature Heatmap (°C)",
      "width": "container",
      "data": {"url": "data/weather_selangor_cleaned.csv"},
      "transform": [
        {
          "calculate": "toDate(datum.datetime)",
          "as": "date"
        },
        {"filter": {"param": "time_brush"}}
      ],
      "mark": "rect",
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "title": "Month",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "y": {
          "field": "city",
          "type": "nominal",
          "title": "City",
          "axis":  {
            "labelFontSize": 12
          }
        },
        "color": {
          "aggregate": "mean",
          "field": "temperature",
          "type": "quantitative",
          "scale": {"scheme": "yelloworangebrown"},
          "title": "Temperature (°C)",
          "legend": {
            "title": "Temperature (°C)",
            "orient": "right"
          }
        }
      }
    }
  ],
  "config": {
    "title": {
      "font": "Times New Roman",
      "fontSize": 20,
      "fontWeight": "bold"
    },
    "legend": {"titleFontSize": 16, "labelFontSize": 14},
    "concat": {"spacing": 20}
  }
}
