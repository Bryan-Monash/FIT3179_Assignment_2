{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "railway_color_scale",
      "value": {
        "domain": [
          "Kelana Jaya Line",
          "Ampang Line",
          "Putrajaya Line",
          "Kajang Line",
          "KTM",
          "KL Monorail"
        ],
        "range": [
          "#1f78b4",
          "#33a02c",
          "#6a3d9a",
          "#00bfc4",
          "#b2df8a",
          "#636363"
        ]
      }
    }
  ],
  "vconcat": [
    {
      "title": "Yearly Ridership (Brush to Select Year Range)",
      "width": 1500,
      "height": 100,
      "data": {"url": "data/ridership_filtered.csv"},
      "mark": "line",
      "params": [
        {
          "name": "time_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "axis": {"title": "Year", "format": "%Y"}
        },
        "y": {
          "aggregate": "sum",
          "field": "ridership",
          "axis": {"title": "Total Ridership", "grid": false}
        },
        "color": {
          "field": "route", 
          "type": "nominal",
          "scale": {
            "domain": {"expr": "railway_color_scale.domain"}, 
            "range": [
              "#1f78b4",
              "#33a02c",
              "#6a3d9a",
              "#00bfc4",
              "#b2df8a",
              "#636363"
            ]
          }
        }
      }
    },
    {
      "hconcat": [
        {
          "title": "",
          "width": 750,
          "height": 100,
          "data": {"url": "data/ridership_filtered.csv"},
          "transform": [
            {"filter": {"param": "time_brush"}}
          ],
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "route", 
              "type": "nominal", 
              "title": "Route",
              "axis": {"grid": false}
            },
            "y": {
              "aggregate": "sum", 
              "field": "ridership", 
              "title": "Total Ridership"
            },
            "color": {
              "field": "route", 
              "type": "nominal",
              "scale": {
                "domain": {"expr": "railway_color_scale.domain"}, 
                "range": [
                  "#1f78b4",
                  "#33a02c",
                  "#6a3d9a",
                  "#00bfc4",
                  "#b2df8a",
                  "#636363"
                ]
              }
            },
            "tooltip": [
              {"field": "route", "title": "Route"},
              {"aggregate": "sum", "field": "ridership", "title": "Ridership"},
              {"field": "date", "title": "Date", "timeUnit": "yearmonth", "type": "temporal"}
            ]
          }
        },
        {
          "title": "Selangor Temperature Heatmap (°C)",
          "width": 750,
          "height": 100,
          "data": {"url": "data/weather_selangor_cleaned.csv"},
          "transform": [
            {
              "calculate": "toDate(datum.datetime)",
              "as": "date"
            },
            {"filter": {"param": "time_brush"}}
          ],
          "mark": "rect",
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "timeUnit": "yearmonth",
              "title": "Month"
            },
            "y": {
              "field": "city",
              "type": "nominal",
              "title": "City"
            },
            "color": {
              "aggregate": "mean",
              "field": "temperature",
              "type": "quantitative",
              "scale": {"scheme": "yelloworangebrown"},
              "title": "Temperature (°C)"
            }
          }
        }
      ]
    }
  ],
  "config": {
    "title": {"font": "sans-serif", "fontSize": 14},
    "legend": {"titleFontSize": 11, "labelFontSize": 10}
  }
}
