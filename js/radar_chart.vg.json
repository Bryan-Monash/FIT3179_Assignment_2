{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": "Weather Metrics in Selangor",
  "width": 650,
  "height": 650,
  "autosize": {"type": "none"},
  "padding": {"top": 100, "bottom": 30, "left": 160, "right": 160},
  "signals": [
    {"name": "radius", "update": "min(width, height) / 2 -25"},
    {
      "name": "chk2020",
      "value": false,
      "bind": {"input": "checkbox", "name": "2020 "}
    },
    {
      "name": "chk2021",
      "value": false,
      "bind": {"input": "checkbox", "name": "2021 "}
    },
    {
      "name": "chk2022",
      "value": true,
      "bind": {"input": "checkbox", "name": "2022 "}
    },
    {
      "name": "chk2023",
      "value": true,
      "bind": {"input": "checkbox", "name": "2023 "}
    },
    {
      "name": "chk2024",
      "value": false,
      "bind": {"input": "checkbox", "name": "2024 "}
    }
  ],
  "data": [
    {
      "name": "weather",
      "url": "data/weather_selangor_cleaned.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {"type": "formula", "as": "year", "expr": "year(datum.datetime)"},
        {
          "type": "aggregate",
          "groupby": ["year"],
          "fields": ["temperature", "precipitation_total", "humidity", "wind_speed", "gust"],
          "ops": ["mean", "mean", "mean", "mean", "mean"],
          "as": ["Average temperature", "Average precipitation", "Average humidity", "Average wind speed", "Average gust"]
        },
        {
          "type": "fold",
          "fields": ["Average temperature", "Average precipitation", "Average humidity", "Average wind speed", "Average gust"],
          "as": ["metric", "value"]
        },
        {
          "type": "window",
          "ops": ["max"],
          "fields": ["value"],
          "as": ["max_value"],
          "groupby": ["metric"]
        },
        {
          "type": "formula",
          "as": "normalized",
          "expr": "datum.value / datum.max_value"
        },
        {
          "type": "filter", 
          "expr": "(datum.year == 2020 && chk2020) || (datum.year == 2021 && chk2021) || (datum.year == 2022 && chk2022) || (datum.year == 2023 && chk2023) || (datum.year == 2024 && chk2024)"
        }
      ]
    },
    {
      "name": "metrics",
      "source": "weather",
      "transform": [{"type": "aggregate", "groupby": ["metric"]}]
    }
  ],

  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "weather", "field": "metric"}
    },
    {
      "name": "radial",
      "type": "linear",
      "range": {"signal": "[0, radius]"},
      "zero": true,
      "nice": false,
      "domain": [0,1]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [2020, 2021, 2022, 2023, 2024],
      "range": ["#1f77b4", "#ff7f0e", "#9467bd", "#17becf", "#8c564b"]
    }
  ],

  "legends": [
    {
      "fill": "color",
      "title": "Year",
      "orient": "top-right",
      "offset": 200,
      "labelFontSize": 14,
      "titleFontSize": 16
    }
  ],

  "encode": {
    "enter": {
      "x": {"signal": "radius"},
      "y": {"signal": "radius"}
    }
  },

  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "weather", "name": "facet", "groupby": ["year"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "metric-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"signal": "scale('radial', datum.normalized) * cos(scale('angular', datum.metric))"},
              "y": {"signal": "scale('radial', datum.normalized) * sin(scale('angular', datum.metric))"},
              "stroke": {"scale": "color", "field": "year"},
              "strokeWidth": {"value": 2},
              "fill": {"scale": "color", "field": "year"},
              "fillOpacity": {"value": 0.1}
            }
          }
        },
        {
          "type": "symbol",
          "name": "points",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "x": {"signal": "scale('radial', datum.normalized) * cos(scale('angular', datum.metric))"},
              "y": {"signal": "scale('radial', datum.normalized) * sin(scale('angular', datum.metric))"},
              "size": {"value": 80},
              "fill": {"scale": "color", "field": "year"},
              "stroke": {"value": "white"},
              "strokeWidth": {"value": 1.5}
            }
          }
        },
        {
          "type": "rule",
          "name": "radial-grid",
          "from": {"data": "metrics"},
          "zindex": 0,
          "encode": {
            "enter": {
              "x": {"value": 0},
              "y": {"value": 0},
              "x2": {"signal": "radius * cos(scale('angular', datum.metric))"},
              "y2": {"signal": "radius * sin(scale('angular', datum.metric))"},
              "stroke": {"value": "lightgray"},
              "strokeWidth": {"value": 1}
            }
          }
        },
        {
          "type": "text",
          "name": "metric-label",
          "from": {"data": "metrics"},
          "zindex": 1,
          "encode": {
            "enter": {
              "x": {"signal": "(radius + 30) * cos(scale('angular', datum.metric))"},
              "y": {"signal": "(radius + 30) * sin(scale('angular', datum.metric))"},
              "text": {"field": "metric"},
              "align": [
                {"test": "abs(scale('angular', datum.metric)) > PI / 2", "value": "right"},
                {"value": "left"}
              ],
              "baseline": [
                {"test": "scale('angular', datum.metric) > 0", "value": "top"},
                {"test": "scale('angular', datum.metric) == 0", "value": "middle"},
                {"value": "bottom"}
              ],
              "fill": {"value": "black"},
              "fontSize": {"value": 16}
            }
          }
        },
        {
          "type": "line",
          "name": "outer-line",
          "from": {"data": "radial-grid"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {"field": "x2"},
              "y": {"field": "y2"},
              "stroke": {"value": "lightgray"},
              "strokeWidth": {"value": 1}
            }
          }
        }
      ]
    }
  ],
  "config": {
    "title": {
      "font": "Times New Roman",
      "fontSize": 24,
      "fontWeight": "bold"
    },
    "legend": {
      "titleFontSize": 13.5, 
      "labelFontSize": 12.5
    }
  }
}
